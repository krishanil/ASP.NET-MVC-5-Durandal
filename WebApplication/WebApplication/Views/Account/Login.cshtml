@{ Layout = null; }

@model WebApplication.BLL.Models.Account.BindingModels.LoginModel

<h2>Log in</h2>
<div class="row">
    <section class="col-md-4">
        <form role="form">
            <h4>Use a local account to log in.</h4>
            <hr />
            @Html.EditorFor(m => m.UserName, new { data_bind = "hasFocus: setFocus" })
            @Html.EditorFor(m => m.Password)
            @Html.EditorFor(m => m.RememberMe)
            <div class="form-group">
                <div class="controls">
                    <a class="p-btn paper paper-curl-right" data-bind="click: login, disable: session.isBusy()">Log in</a>
                </div>
            </div>
            <p><a data-bind="click: register">Register</a> if you don't have a local account.</p>
        </form>
    </section>
