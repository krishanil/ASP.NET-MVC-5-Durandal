@using WebApplication.Models
@model LoginViewModel

@{
    Layout = null;
    ViewBag.Title = "Log in";
}

<h2>@ViewBag.Title</h2>
<h5 style="color: #ccc">Use a local account to log in.</h5>
<hr />
<div class="row">
    <div class="col-md-8">
        <section id="loginForm">
            @using (Html.BeginForm("Login", "Account", new { ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.EditorFor(m => m.Email, new { data_bind = "value: Email" })
                @Html.EditorFor(m => m.Password, new { data_bind = "value: Password" })
                @Html.EditorFor(m => m.RememberMe, new { data_bind = "value: RememberMe" })

                <div class="form-group">
                    <div class="controls">
                        <a class="p-btn paper paper-curl-right" data-bind="click: Login">Log in</a>
                    </div>
                </div>
            }
        </section>
    </div>
    <div class="col-md-4">
        <section id="socialLoginForm">
            @Html.Partial("_ExternalLoginsListPartial", new ExternalLoginListViewModel { ReturnUrl = ViewBag.ReturnUrl })
        </section>
    </div>
</div>