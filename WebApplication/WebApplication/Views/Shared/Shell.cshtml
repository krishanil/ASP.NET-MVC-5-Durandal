@{ Layout = null; }

<div>
    <div class="navbar navbar-default" role="navigation">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" data-bind="attr: { href: router.navigationModel()[0].hash }">
                <i class="fa fa-home"></i>Durandal
            </a>
        </div>
        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav" data-bind="foreach: router.navigationModel">
                <li data-bind="css: { active: isActive }, ifIsInRole: $data.requiredRoles">
                    <a data-bind="attr: { href: hash }, html: title"></a>
                </li>
            </ul>
            <ul class="nav navbar-nav navbar-right">
                <li class="hidden-xs" data-bind="visible: session.isLoggedIn()">
                    <span class="navbar-text nofloat">User : <a href="#/manage" class="text-primary navbar-link" data-bind="text: session.userName()"></a></span>
                </li>
                <li data-bind="visible: !session.isLoggedIn()">
                    <a href="#login" class="navbar-link">Sign in</a>
                </li>
                <li>
                    <a href="#" data-bind="click: logout,visible: session.isLoggedIn()">Log off</a>
                </li>
                <li class="visible-xs" data-bind="visible: session.isLoggedIn()">
                    <a href="#/manage" class="text-primary" data-bind="text: 'User : ' + session.userName()"></a>
                </li>
                <li>
                    <div class="loader">
                        <i data-bind="css: { 'active fa': session.isBusy() || router.isNavigating()}" class="fa-spinner fa-spin fa-2x"></i>
                    </div>
                </li>
            </ul>
        </div>
    </div>

    <div class="page-host container body-content" data-bind="router: { transition: 'entrance', cacheViews: false }"></div>
</div>
